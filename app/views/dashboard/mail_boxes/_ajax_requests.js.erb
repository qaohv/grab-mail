<script type="text/javascript">
setInterval(function() {
  <% @boxes.each do |mail_box| %>
    $.ajax({
      url: "/dashboard/mail_boxes/<%= mail_box.id %>/check_upload_status",
      data: "job_id=<%= mail_box.current_job_id %>",
      success: function(data) {
        if(data.status == "complete") {
          changeJobStatus(data.status, "<%= mail_box.current_job_id %>", <%= mail_box.id %>);
        }
        if(data.status == "failed" ) {
          alert("FAILED!");
        }
      }
    });
  <% end %>
}, 3000);

  function changeJobStatus(job_status, job_id, mail_box_id) {
    $.ajax({
      url: "/dashboard/mail_boxes/" + mail_box_id + "/change_job_status",
      type: "GET",
      data: "job_id=" + job_id + "&job_status="+ job_status
    });
  }
</script>
